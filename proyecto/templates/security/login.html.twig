        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('login-form');
            const emailField = document.getElementById('username');
            const passwordField = document.getElementById('password');
            const loginBtn = document.getElementById('login-btn');
            const btnText = document.getElementById('btn-text');
            const loadingSpinner = document.getElementById('loading-spinner');

            if (form) {
                function validateEmail(email) {
                    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    return re.test(email);
                }

                function updateFormState() {
                    const isEmailValid = validateEmail(emailField.value);
                    const isPasswordValid = passwordField.value.length >= 3;
                    
                    // Actualizar estados visuales
                    emailField.classList.remove('error');
                    passwordField.classList.remove('error');
                    
                    if (emailField.value && !isEmailValid) {
                        emailField.classList.add('error');
                    }
                    
                    if (passwordField.value && !isPasswordValid) {
                        passwordField.classList.add('error');
                    }
                    
                    // Habilitar/deshabilitar botón
                    loginBtn.disabled = !(isEmailValid && isPasswordValid);
                }

                // Event listeners
                emailField.addEventListener('input', updateFormState);
                passwordField.addEventListener('input', updateFormState);

                // Manejo del envío del formulario
                form.addEventListener('submit', function() {
                    loginBtn.disabled = true;
                    btnText.textContent = 'Iniciando sesión...';
                    loadingSpinner.style.display = 'block';
                });

                // Auto-focus en campo de contraseña si email ya está presente
                if (emailField.value) {
                    passwordField.focus();
                }

                // Validación inicial
                updateFormState();

                // Limpiar estados de loading al cargar la página (en caso de error)
                window.addEventListener('load', function() {
                    loginBtn.disabled = false;
                    btnText.textContent = 'Iniciar sesión';
                    loadingSpinner.style.display = 'none';
                });
            }
        });
    </script>
{% endblock %}